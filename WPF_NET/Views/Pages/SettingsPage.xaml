<Page x:Class="WPF_NET.Views.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WPF_NET.Views.Pages"
      mc:Ignorable="d"
      d:DesignHeight="714.5" d:DesignWidth="1000"
      Title="SettingsPage">
    <Grid>
        <StackPanel Margin="42">
            <TextBlock Margin="0,12,0,0" Text="主题选择" />
            <RadioButton
                x:Name="LightThemeRadioButton"
                Margin="0,12,0,0"
                Checked="OnLightThemeRadioButtonChecked"
                Content="亮主题"
                GroupName="themeSelect" />
            <RadioButton
                x:Name="DarkThemeRadioButton"
                Margin="0,8,0,0"
                Checked="OnDarkThemeRadioButtonChecked"
                Content="暗主题"
                GroupName="themeSelect" />
            <RadioButton
                x:Name="AutoThemeRadioButton"
                Margin="0,8,0,0"
                Checked="OnAutoThemeRadioButtonChecked"
                Content="系统主题"
                GroupName="themeSelect" />

        </StackPanel>

    </Grid>
</Page>