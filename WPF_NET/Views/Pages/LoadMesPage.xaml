<Page x:Class="WPF_NET.Views.Pages.LoadMesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WPF_NET.Views.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:viewModels="clr-namespace:WPF_NET.ViewModels"
      mc:Ignorable="d"
      d:DesignHeight="714.5" d:DesignWidth="1000"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Title="LoadMesPage">
    <Page.DataContext>
        <viewModels:LoadMesPageViewModel />
    </Page.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid>
                <StackPanel>
                    <TextBlock Text="请求列表" FontSize="20" Margin="60,0" />
                    <DataGrid
                        Name="DataGrid"
                        Height="600" Margin="30,0"
                        BorderThickness="1"
                        HorizontalAlignment="Center" VerticalAlignment="Center"
                        ItemsSource="{Binding LoadMesPageModel.MesPojoList ,Mode=OneWay}"
                        Background="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="名称" Width="*" Binding="{Binding Name}" />
                            <DataGridTextColumn Header="请求地址" Width="*" Binding="{Binding HttpPath}" />
                            <DataGridTextColumn Header="请求类型" Width="*" Binding="{Binding Ajax}" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Button Content="添加" Width="70" Margin="30,0,0,0" Command="{Binding AddHttpButtonCommand}" />
                        <Button Content="修改" Width="70" Margin="30,0,0,0" Command="{Binding UpdateHttpButtonCommand}"  CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Page}}"/>
                        <Button Content="删除" Width="70" Margin="30,0,0,0" Command="{Binding DeleteHttpButtonCommand}"  CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Page}}"  />
                        <Button Content="手动发送" Width="90" Margin="30,0,0,0" Command="{Binding JogHttpButtonCommand}"  CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Page}}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
            <Grid Grid.Column="1">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="返回内容" FontSize="17" Margin="20,3"/>
                    <Border
                        Background="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        Width="400" Height="600"
                        CornerRadius="10"
                        >
                    <TextBox Style="{x:Null}" Background="{x:Null}" BorderThickness="0"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                             FontSize="13"
                             IsReadOnly="True"
                        />
                    </Border>
                </StackPanel>
              

            </Grid>

        </Grid>
        <ui:SnackbarPresenter Grid.Row="0" Grid.ColumnSpan="2" Name="SnackbarPresenter"
                              VerticalAlignment="Bottom" />
    </Grid>
</Page>