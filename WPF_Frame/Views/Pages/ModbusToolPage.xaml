<Page x:Class="WPF_Frame.Views.Pages.ModbusToolPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WPF_Frame.Views.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:viewModels="clr-namespace:WPF_Frame.ViewModels"
      mc:Ignorable="d"
      d:DesignHeight="650" d:DesignWidth="1100"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Title="ModbusToolPage">
    <Page.DataContext>
        <viewModels:ModbusToolViewModel/>
    </Page.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.3*"></ColumnDefinition>
            <ColumnDefinition Width="1.4*"></ColumnDefinition>
            <ColumnDefinition Width="1.3*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.9*"></RowDefinition>
                <RowDefinition Height="1.6*"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>
            <TabControl Margin="20 0" Background="#FFC5DDF3">
                <TabItem Width="150">
                    <TabItem.Header>
                        <TextBlock FontWeight="Bold" Text="ModbusTCP" Margin="30 0 0 0"></TextBlock>
                    </TabItem.Header>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <WrapPanel Margin="5 ">
                            <Border Margin="5">
                                <TextBlock Text="IP地址" FontSize="15" HorizontalAlignment="Center"
                                           VerticalAlignment="Center">
                                </TextBlock>
                            </Border>
                            <ComboBox Width="250" ContextMenu="{Binding ModbusToolModel.ModbusTcp_Ip   }"></ComboBox>
                        </WrapPanel>
                        <WrapPanel Margin="5">
                            <Border Margin="5">
                                <TextBlock Text="端口号" FontSize="15" HorizontalAlignment="Center"
                                           VerticalAlignment="Center">
                                </TextBlock>
                            </Border>
                            <ui:NumberBox Width="250"></ui:NumberBox>
                        </WrapPanel>
                        <WrapPanel HorizontalAlignment="Center">
                            <Button Content="连接" Width="70" Margin="0 10 0 10"></Button>
                            <Button Content="断开" Width="70" Margin="30 10 0 10"></Button>
                        </WrapPanel>
                    </StackPanel>
                </TabItem>
                <TabItem Width="150">
                    <TabItem.Header>
                        <TextBlock FontWeight="Bold" Text="ModbusRTU" Margin="30 0 0 0"></TextBlock>
                    </TabItem.Header>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <WrapPanel >
                            <StackPanel Orientation="Horizontal" Margin="0 5">
                                <Border VerticalAlignment="Center" Width="58">
                                    <TextBlock Text="端口号" HorizontalAlignment="Right" Margin="5" />
                                </Border>
                                <ComboBox Margin="0 0 10 0" Width="90"></ComboBox>
                            </StackPanel >
                            <StackPanel Orientation="Horizontal" Margin="0 5">

                                <Border HorizontalAlignment="Center"  Width="58" VerticalAlignment="Center">
                                    <TextBlock Text="波特率" Margin="5"  HorizontalAlignment="Right"/>
                                </Border>
                                <ComboBox Margin="0 0 10 0" Width="90"></ComboBox>
                            </StackPanel>

                        </WrapPanel>
                        <WrapPanel >
                            <StackPanel Orientation="Horizontal"  Margin="0 5">

                                <Border HorizontalAlignment="Center" VerticalAlignment="Center" Width="58">
                                    <TextBlock Text="数据位" HorizontalAlignment="Right" Margin="5" />
                                </Border>

                                <ComboBox Margin="0 0 10 0" Width="90"></ComboBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"  Margin="0 5">

                                <Border HorizontalAlignment="Center"  Width="58" VerticalAlignment="Center">
                                    <TextBlock Text="停止位" Margin="5"  HorizontalAlignment="Right"/>
                                </Border>
                                <ComboBox Margin="0 0 10 0" Width="90"></ComboBox>
                            </StackPanel>
                        </WrapPanel>
                        <WrapPanel >
                            <StackPanel Orientation="Horizontal" Margin="0 5">

                                <Border HorizontalAlignment="Center" VerticalAlignment="Center" Width="58">
                                    <TextBlock Text="校验位" HorizontalAlignment="Right" Margin="5" />
                                </Border>
                                <ComboBox Margin="0 0 5 0" Width="90"></ComboBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0 5">

                                <Button Content="连接" Margin="5 0" Width="65" Height="35"></Button>
                                <Button Content="断开" Margin="5 0" Width="65" Height="35"></Button>
                            </StackPanel>
                        </WrapPanel>
                    </StackPanel>


                </TabItem>
            </TabControl>
            <StackPanel Grid.Row="1" >
                <Border Height="25" CornerRadius="10" Width="100" Margin="15"  Background="#FF75F185" Visibility="Collapsed">
                    <TextBlock Text="连接成功" HorizontalAlignment="Center"  VerticalAlignment="Center" FontSize="17" Foreground="#E423A42A"/>
                </Border>
                <Border Height="25" CornerRadius="10" Width="100" Margin="15"  Background="#FFED4CBA" >
                    <TextBlock Text="未连接" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="17" Foreground="#E4FC0040"/>
                </Border>

                <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="30 0">
                    <WrapPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="功能码" TextAlignment="Right" Width="70" FontSize="15"  HorizontalAlignment="Center" VerticalAlignment="Center"  Margin="8"></TextBlock>
                            <ComboBox Width="150"></ComboBox>
                        </StackPanel>
                    </WrapPanel>
                    <WrapPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="站地址" TextAlignment="Right" Width="70" FontSize="15"  HorizontalAlignment="Center" VerticalAlignment="Center"  Margin="8"></TextBlock>
                            <ComboBox Width="150"></ComboBox>
                        </StackPanel>
                    </WrapPanel>
                    <WrapPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="起始地址" TextAlignment="Right" Width="70" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"  Margin="8"></TextBlock>
                            <ComboBox Width="150"></ComboBox>
                        </StackPanel>
                    </WrapPanel>
                    <WrapPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="数量" TextAlignment="Right" Width="70" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"  Margin="8"></TextBlock>
                            <ui:NumberBox Width="150"></ui:NumberBox>
                        </StackPanel>
                    </WrapPanel>
                    <Button Content="发送" Width="70" HorizontalAlignment="Right" Margin="0 5 15 0"></Button>

                </StackPanel>
            </StackPanel>

        </Grid>
        <StackPanel Grid.Column="1">

            <ui:TextBlock Text="写入消息" Margin="30 5" FontSize="14" FontWeight="Black" HorizontalAlignment="Left"></ui:TextBlock>
            <ui:DataGrid Height="600" Margin="10 0 15 0" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
        </StackPanel>
        <StackPanel Grid.Column="2">
            <TextBlock Text="接受消息" Margin="30 5" FontSize="14" FontWeight="Black" HorizontalAlignment="Left"></TextBlock>
            <ui:DataGrid Height="600" Margin="5 0 20 0" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>


        </StackPanel>

    </Grid>
</Page>