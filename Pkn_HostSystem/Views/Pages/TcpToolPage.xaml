<Page x:Class="Pkn_HostSystem.Views.Pages.TcpToolPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:viewModels="clr-namespace:Pkn_HostSystem.ViewModels"
      xmlns:page="clr-namespace:Pkn_HostSystem.ViewModels.Page"
      xmlns:page1="clr-namespace:Pkn_HostSystem.ViewModels.Page"
      xmlns:converter="clr-namespace:Pkn_HostSystem.Base.Converter"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance page:TcpToolViewModel}"
      d:DesignHeight="714.5" d:DesignWidth="1000"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Title="TcpToolPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="1.3*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Text="客户端" FontWeight="Bold" Margin="10" />
            <Border Grid.Row="1" Margin="10,5" BorderThickness="2" CornerRadius="7"
                    Background="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Row="0" Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="服务器IP" Margin="5" VerticalAlignment="Center"/>
                        <Grid Grid.Column="1" Margin="5,10">
                            <TextBox  Text="{Binding TcpToolModel.ConnectServerIp,UpdateSourceTrigger=PropertyChanged}"/>
                        </Grid>
                    </Grid>
                    <Grid Grid.Row="0" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="端口号" Margin="5" VerticalAlignment="Center"/>
                        <Grid Grid.Column="1" Margin="5,10">
                            <ui:NumberBox Value="{Binding TcpToolModel.ConnectServerPost}"/>
                        </Grid>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="选择客户端" Margin="5" VerticalAlignment="Center"/>
                        <Grid Grid.Column="1" Margin="5,10">
                            <ComboBox ItemsSource="{Binding TcpToolModel.SelectClient}"
                                      DisplayMemberPath="IpAndPost"/>
                        </Grid>
                    </Grid>

                    <Grid Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center">
                        <Button Content="连接/断开"  />
                    </Grid>
                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Text="服务器" FontWeight="Bold" Margin="10" />
            <Border Grid.Row="1" Margin="10,5" BorderThickness="2" CornerRadius="7"
                    Background="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Row="0" Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="端口号" Margin="5" VerticalAlignment="Center" />
                        <Grid Grid.Column="1" Margin="5,10">
                            <ui:NumberBox Value="{Binding TcpToolModel.ServerPost}" />
                        </Grid>
                    </Grid>
                    <Grid Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="是否监听" Margin="5" VerticalAlignment="Center"/>
                        <Grid Grid.Column="1" Margin="5,10">
                            <ui:ToggleSwitch  IsChecked="{Binding TcpToolModel.IsLearn}"/>
                        </Grid>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="切换服务器" Margin="5" VerticalAlignment="Center"/>
                        <Grid Grid.Column="1" Margin="5,10">
                            <ComboBox ItemsSource="{Binding TcpToolModel.SelectServer}"/>
                        </Grid>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center">
                        <Button Content="连接/断开" />
                    </Grid>
                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="0">
            <Border Margin="10,5" BorderThickness="2" CornerRadius="7"
                    Background="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="5">
                        <GroupBox Header="接收">
                            <TextBox Text="{Binding TcpToolModel.ClientAcceptMessage ,UpdateSourceTrigger=PropertyChanged}"/>
                        </GroupBox>

                    </Grid>
                    <Grid Grid.Row="1" Margin="5">
                        <GroupBox Header="发送">
                            <TextBox Text="{Binding TcpToolModel.ClientSendMessage ,UpdateSourceTrigger=PropertyChanged}" />
                        </GroupBox>
                    </Grid>
                    <Grid Grid.Row="2" HorizontalAlignment="Right" Margin="20,0">
                        <Button Content="发送" Width="70" />
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="1">
            <Border Margin="10,5" BorderThickness="2" CornerRadius="7"
                    Background="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="0.3*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Row="0" Margin="5">
                        <GroupBox Header="接收">
                            <TextBox Text="{Binding TcpToolModel.ServerAcceptMessage ,UpdateSourceTrigger=PropertyChanged}" />
                        </GroupBox>
                    </Grid>
                    <Grid Grid.Row="1" Margin="5">
                        <GroupBox Header="发送">
                            <TextBox Text="{Binding TcpToolModel.ServerSendMessage ,UpdateSourceTrigger=PropertyChanged}" /> 
                        </GroupBox>
                    </Grid>
                    <Grid Grid.Row="2" HorizontalAlignment="Right" Margin="20,0">
                        <Button Content="发送" Width="70" />
                    </Grid>
                    <Grid Grid.Column="1" Grid.RowSpan="2" Margin="5">
                        <GroupBox Header="连接的客户端">
                        <Border BorderThickness="2" Background="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}">
                                <ListBox ItemsSource="{Binding TcpToolModel.ServerConnectClient}"/>
                        </Border>
                        </GroupBox>
                    </Grid>
                    <Grid Grid.Column="1" Grid.Row="3" HorizontalAlignment="Center">
                        <Button Content="强制断开" />
                    </Grid>
                </Grid>
            </Border>
        </Grid>
        <ui:SnackbarPresenter Grid.Row="1" Grid.ColumnSpan="2" Name="SnackbarPresenter" />
    </Grid>
</Page>